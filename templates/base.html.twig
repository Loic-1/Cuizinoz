<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="{{
      asset("assets/Logo1.png")
    }}"> {% block stylesheets %}

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.1/css/all.min.css"
      integrity="sha512-5Hs3dF2AEPkpNAR7UiOHba+lRSJNeM2ECkwxUIxC1Q/FLycGTbNapWXB4tP889k5T5Ju8fs4b1P5z/iB4nMfSQ=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/css/splide.min.css"
    />

    <link rel="stylesheet" href="{{ asset('css/style.css') }}" />

    {% endblock %} {% block javascripts %} {#
    <script src="{{ asset('js/script.js') }}"></script>
    #} {% block importmap %}{{
      importmap("app")
    }}{% endblock %} {% endblock %}
  </head>

  <body>
    <header>
      {% if app.user %}

      <a
        href="{{ path('app_home') }}"
        title="Retour à l'accueil"
      >
        <img
          src="{{ asset('assets/Logo1.png') }}"
          alt="Logo Cuizinoz renvoyent vers la page d'accueil"
        />
      </a>

      <a href="{{ path('app_recipe') }}"> Recettes </a>
      |
      <a href="{{ path('list_compilation') }}"> Collections </a>
      |
      <a href="#"> Catégories </a>
      |
      <a href="#"> Recette aléatoire </a>

      <a
        href="{{ path('app_favorite', { user: app.user.id }) }}"
        title="Vos favoris"
      >
        <i class="fa-heart fa-solid"></i>
      </a>

      <a
        href="#"
        title="Créer une recette"
      >
        <i class="fa-plus">
          <i class="fa-solid fa-plus"></i>
        </i>
      </a>

      <a
        href="{{ path('detail_user', { user: app.user.id }) }}"
        title="{{ app.user.pseudo }}"
      >
        <i class="fa-regular fa-user"></i>
      </a>

      <a
        href="{{ path('app_logout') }}"
        title="Se déconnecter"
      >
        <i class="fa-solid fa-right-from-bracket"></i>
        {# <i class="fa-solid fa-power-off"></i> #}
      </a>

      {% else %}

      <a
        href="{{ path('app_home') }}"
        title="Retour à l'accueil"
      >
        <img
          src="{{ asset('assets/Logo1.png') }}"
          alt="Logo Cuizinoz renvoyent vers la page d'accueil"
        />
      </a>

      <a href="{{ path('app_login') }}">Connexion</a>
      |
      <a href="{{ path('app_register') }}">Enregistrement</a>

      <p>Connectez-vous pour avoir accès à plus de fonctionnalités!</p>

      {% endif %}
    </header>

    {% block body %} {% endblock %}
  </body>
</html>
